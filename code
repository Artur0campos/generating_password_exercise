func exercise() {
    
    
    let alphabet = ["a","b","c","d","e","f","g","h","i","j","k","l","m","n","o","p","q","r","s","t","u","v","w","x","y","z"]
    
    //The number of letters in alphabet equals 26
    var char = ""
    for i in 0..<6 {
        let randomIndex = Int.random(in: 0..<alphabet.count)
        char += alphabet[randomIndex]
    }
    let password = char
    
    print(password)
    
}
exercise()
